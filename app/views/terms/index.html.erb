<h1>Listing terms</h1>

<table>
  <tr>
    <th>Unit</th>
    <th>Segment</th>
    <th>Lang</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.unit_id %></td>
    <td><%= term.segment %></td>
    <td><%= term.lang %></td>
    <td><%= term.note %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

